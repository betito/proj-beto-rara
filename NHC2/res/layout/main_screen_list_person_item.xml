<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/person_list_name"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	       />
        
    <TextView
        android:id="@+id/person_list_total"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="@color/white"
	    android:textStyle="?android:attr/textAppearanceMedium"
	    android:text="@string/total_person"
        />
    
    <TextView
        android:id="@+id/person_list_total_plus_10"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="@color/white"
	    android:textStyle="?android:attr/textAppearanceMedium"
	    android:text="@string/plus_10"
        />

</LinearLayout>
